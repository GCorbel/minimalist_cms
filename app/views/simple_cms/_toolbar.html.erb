<script type="text/template" id="frontend_toolbar">
  <footer>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn editing-mode">Edition mode</a>
        <a class="btn save">Save</a>
        <a class="btn cancel">Cancel</a>
        <% if @page %>
          <div class="btn-group">
            <a class="btn dropdown-toggle" data-toggle="dropdown" href="#">
              Page's actions
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to 'Create a page', new_page_path, remote: true %>
              </li>
              <li>
                <%= link_to 'Edit the page',
                  edit_page_path(@page),
                  remote: true %>
              </li>
              <li>
                <%= link_to 'Delete the page',
                  page_path(@page),
                  method: 'delete',
                  confirm: 'Are you sure?' %>
              </li>
            </ul>
          </div>
          <% text = @page.draft? ? 'Publish' : 'Unpublish' %>
          <% klass = @page.draft? ? 'btn active' : 'btn' %>
          <%= link_to text,
            "#",
            id: "publish-button",
            class: klass,
            data: {
              toggle: 'button',
              'publish-url' => publish_page_path(@page),
              'unpublish-url' => unpublish_page_path(@page)
            }
          %>
          <%= link_to 'Mark as home page',
            home_page_path(@page),
            class: 'btn',
            remote: true,
            method: 'put',
            confirm: 'Are you sure?' %>
        <% else %>
          <%= link_to 'Create a page',
            new_page_path,
            class: 'btn',
            remote: true %>
        <% end %>
      </div>
    </div>
  </footer>
</script>

<div id="modalContainer"></div>
